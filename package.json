{
  "name": "library-management-system",
  "version": "1.0.9",
  "main": "app.js",
  "scripts": {
    "build": "tsup src --out-dir build",
    "start": "node build/server.cjs",
    "start:dev": "tsx watch src/server.ts | pino-pretty",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "lint:fix": "eslint 'src/**/*.{js,ts}' --fix",
    "prettier": "prettier --check 'src/**/*.{js,ts}'",
    "prettier:fix": "prettier --write 'src/**/*.{js,ts}'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest --testMatch '**/*.spec.ts'",
    "test:e2e": "jest --testMatch '**/*.controller.spec.ts'",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "keywords": [],
  "author": "Kayke-Fujinaka",
  "license": "ISC",
  "description": "A Library Management System (LMS) allows a library to manage its books, members, and their borrowing activities.",
  "type": "module",
  "dependencies": {
    "@prisma/client": "^5.4.1",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "fastify": "^4.23.2",
    "pino-pretty": "^10.2.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.4",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@types/pg": "^8.10.3",
    "@types/supertest": "^2.0.14",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "prisma": "^5.4.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsup": "^7.2.0",
    "tsx": "^3.13.0",
    "typescript": "^5.2.2"
  }
}
